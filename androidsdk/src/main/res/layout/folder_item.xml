<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_f"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/folder_item_ll"
            android:layout_width="0dp"
            android:layout_height="@dimen/file_list_item_height"
            android:layout_weight="1"
            android:background="@drawable/listview_selector"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/folder_item_pic"
                android:layout_width="@dimen/list_item_image_size"
                android:layout_height="@dimen/list_item_image_size"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:src="@drawable/ic_back" />

            <TextView
                android:id="@+id/folder_item_name"
                style="@style/black_medium_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="middle"
                android:singleLine="true"
                android:text="@string/tip_file_list_header" />


        </LinearLayout>


    </LinearLayout>

</LinearLayout>